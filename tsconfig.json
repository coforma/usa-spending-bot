{
  "ts-node": {
    "esm": true,
    "experimentalResolver": true
  },
  "compilerOptions": {
      "lib": ["es2022"],
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "strict": true,
      "sourceMap": true,
      "outDir": "dist",
  },
  "include": [
      "src/**/*",
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}